rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access to other collections
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for the 'registrations' collection
    match /registrations/{registrationId} {
      // Anyone can create a new registration (submit the form)
      allow create: if true;

      // Anyone can read a registration if they know the ID (for status tracking)
      allow read: if true;

      // NO ONE can update or delete from the client. This must be done
      // by the server with admin credentials.
      allow update, delete: if false;
    }
  }
}
